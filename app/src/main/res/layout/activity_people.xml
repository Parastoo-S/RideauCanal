<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="segproject.tmmpl.PeopleActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select User"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="5">

                <Button
                    android:id="@+id/userid01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_row="0"
                    android:layout_rowSpan="1"
                    android:height="70dp"
                    android:drawableLeft="@mipmap/if_10_2716421"
                    android:text="   Laura"
                    android:textAlignment="textStart"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/userid02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_row="1"
                    android:layout_rowSpan="1"
                    android:height="70dp"
                    android:drawableLeft="@mipmap/if_1_2716424"
                    android:text="   Jim"
                    android:textAlignment="textStart"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/userid03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_row="2"
                    android:layout_rowSpan="1"
                    android:height="70dp"
                    android:drawableLeft="@mipmap/if_2_2716422"
                    android:text="   Steven"
                    android:textAlignment="textStart"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/userid04"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_row="3"
                    android:layout_rowSpan="1"
                    android:height="70dp"
                    android:drawableLeft="@mipmap/if_5_2716418"
                    android:text="   Alise"
                    android:textAlignment="textStart"
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/userid05"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="1"
                    android:layout_row="4"
                    android:layout_rowSpan="1"
                    android:height="70dp"
                    android:drawableLeft="@mipmap/if_8_2716423"
                    android:text="   Rex"
                    android:textAlignment="textStart"
                    android:textSize="21sp" />
            </GridLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
